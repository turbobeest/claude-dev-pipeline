        "description": "Generates comprehensive test strategies (60/30/10 distribution) from OpenSpec proposals",
        "priority": 3,
        "phase": "phase2-to-phase3"
      },
      {
        "skill": "integration-validator",
        "triggers": [
          "integration testing",
          "production ready",
          "ready to deploy",
          "Go/No-Go",
          "Task #24",
          "Task #25",
          "Task #26",
          "integration points",
          "system integration",
          "e2e testing",
          "end-to-end",
          "production validation",
          "deployment readiness"
        ],
        "filePatterns": [
          "architecture.md",
          "TASKMASTER_OPENSPEC_MAP.md",
          "ARCHITECTURE.md",
          "docs/architecture"
        ],
        "description": "Validates integration points and production readiness scores",
        "priority": 4,
        "phase": "phase4-phase5-phase6"
      }
    ],
    "phases": {
      "pre-init": {
        "description": "Before tasks.json exists",
        "recommendedSkills": ["prd-to-tasks"]
      },
      "phase1": {
        "description": "Task decomposition with TaskMaster",
        "recommendedSkills": ["prd-to-tasks"]
      },
      "phase1-to-phase2": {
        "description": "Transition from tasks to OpenSpec proposals",
        "recommendedSkills": ["coupling-analysis"]
      },
      "phase2": {
        "description": "OpenSpec proposal generation",
        "recommendedSkills": ["test-strategy-generator"]
      },
      "phase2-to-phase3": {
        "description": "Transition from specs to implementation",
        "recommendedSkills": ["test-strategy-generator"]
      },
      "phase3": {
        "description": "TDD implementation (RED-GREEN-REFACTOR)",
        "recommendedSkills": []
      },
      "phase4": {
        "description": "Component integration testing",
        "recommendedSkills": ["integration-validator"]
      },
      "phase5": {
        "description": "End-to-end workflow testing",
        "recommendedSkills": ["integration-validator"]
      },
      "phase6": {
        "description": "Production readiness validation",
        "recommendedSkills": ["integration-validator"]
      }
    },
    "notes": {
      "caseSensitivity": "All trigger matching is case-insensitive",
      "multipleMatches": "Multiple skills can be suggested if multiple patterns match",
      "fileContext": "File patterns match against files in Claude's context",
      "priority": "Lower priority number = higher priority (1 is highest)"
    }
  }