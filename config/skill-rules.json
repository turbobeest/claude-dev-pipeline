        "priority": 2,
        "phase": "phase1-to-phase2"
      },
      {
        "skill": "test-strategy-generator",
        "triggers": [
          "openspec proposal",
          "test strategy",
          "what tests",
          "TDD",
          "test coverage",
          "write tests",
          "test plan",
          "testing approach",
          "test cases",
          "coverage requirements"
        ],
        "filePatterns": [
          ".openspec/proposals",
          "*.proposal.md",
          ".openspec/"
