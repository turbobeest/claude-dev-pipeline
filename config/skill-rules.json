{
    "version": "1.0",
    "description": "Skill activation rules for Claude Code hooks",
    "skills": [
      {
        "skill": "prd-to-tasks",
        "triggers": [
          "generate tasks",
          "parse prd",
          "create tasks",
          "task decomposition",
          "tasks.json",
          "product requirements",
          "requirements document",
          "break down",
          "decompose"
        ],
        "filePatterns": [
          "PRD.md",
          "requirements.md",
          "product-requirements",
          "REQUIREMENTS.md",
          "docs/PRD",
          "docs/requirements"
        ],
        "description": "Generates TaskMaster tasks.json from PRD with integration tasks",
        "priority": 1,
        "phase": "phase1"
      },
      {
        "skill": "coupling-analysis",
        "triggers": [
          "task-master show",
          "taskmaster show",
          "tightly coupled",
          "loosely coupled",
          "parallel",
          "coupling",
          "proposal strategy",
          "analyze tasks",
          "task dependencies",
          "can we parallelize"
        ],
        "filePatterns": [
          ".taskmaster/tasks.json",
          "tasks.json"
        ],
