{
  "version": "3.2",
  "_comment_hooks": "HOOKS RE-ENABLED - Claude Code v2.0.55+ fixed hook bugs from v2.0.26-2.0.32. Fixed Bash 3.2 compatibility in profiler.sh.",
  "hooks": {
    "_comment": "Phase transition hooks now working. Slash commands remain available as fallback.",

    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/skill-activation-prompt.sh"
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-tool-use-tracker.sh"
          }
        ]
      }
    ]
  },
  "pipeline": {
    "automationLevel": 95,
    "mode": "automatic-hooks",
    "_mode_note": "Hooks now working in Claude Code v2.0.55+. Slash commands available as fallback.",
    "manualGates": {
      "requireApprovalFor": [
        "deployment",
        "destructive-operations",
        "external-api-calls"
      ],
      "autoApprove": [
        "testing",
        "code-generation",
        "documentation",
        "analysis"
      ]
    },
    "phaseTransitions": {
      "autoAdvance": true,
      "_autoAdvance_note": "Automatic phase transitions via PostToolUse hook",
      "requireSignals": true,
      "timeoutMinutes": 30
    },
    "skillActivation": {
      "mode": "codeword-injection",
      "_mode_note": "UserPromptSubmit hook injects activation codewords",
      "fallbackToKeywords": true,
      "debugMode": false
    }
  },
  "workflow": {
    "trackProgress": true,
    "persistState": true,
    "signalEmission": true,
    "_signalEmission_note": "Enabled - PostToolUse hook emits phase signals",
    "codewordInjection": true,
    "_codewordInjection_note": "Enabled - UserPromptSubmit hook injects codewords"
  },
  "logging": {
    "level": "info",
    "hookExecution": true,
    "_hookExecution_note": "Enabled - hooks are now active",
    "skillActivation": true,
    "phaseTransitions": true
  },
  "_instructions": {
    "usage": "Hooks automatically handle phase transitions. Slash commands available as fallback.",
    "commands": [
      "/parse-prd - Phase 1: Task Decomposition",
      "/generate-specs - Phase 2: Specification Generation",
      "/implement-tdd - Phase 3: TDD Implementation",
      "/validate-integration - Phase 4: Integration Testing",
      "/validate-e2e - Phase 5: E2E Validation",
      "/deploy - Phase 6: Production Deployment"
    ],
    "hook_status": "Re-enabled in v3.2 after Claude Code v2.0.55 fixed hook bugs",
    "documentation": "See COMMANDS.md and MANUAL-MODE.md for details"
  }
}
