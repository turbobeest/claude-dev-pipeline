{
  "version": "3.0",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/user-prompt-submit.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-tool-use-tracker.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-implementation-validator.sh"
          }
        ]
      }
    ]
  },
  "pipeline": {
    "automationLevel": 95,
    "manualGates": {
      "requireApprovalFor": [
        "deployment",
        "destructive-operations",
        "external-api-calls"
      ],
      "autoApprove": [
        "testing",
        "code-generation",
        "documentation",
        "analysis"
      ]
    },
    "phaseTransitions": {
      "autoAdvance": true,
      "requireSignals": true,
      "timeoutMinutes": 30
    },
    "skillActivation": {
      "mode": "codeword-injection",
      "fallbackToKeywords": false,
      "debugMode": false
    }
  },
  "workflow": {
    "trackProgress": true,
    "persistState": true,
    "signalEmission": true,
    "codewordInjection": true
  },
  "logging": {
    "level": "info",
    "hookExecution": true,
    "skillActivation": true,
    "phaseTransitions": true
  }
}